---
import { LanguageToggle } from './LanguageToggle';
import { getLangFromUrl, useTranslations } from '../../i18n';

const pathname = Astro.url.pathname;
const currentLang = getLangFromUrl(Astro.url);
const t = useTranslations(currentLang);

// Demo pages have their own navigation
const isDemoPage = pathname.startsWith('/demo_');

// Public pages include home, pricing, and language-prefixed pages
const isPublicPage = pathname === '/' ||
  pathname === '/pricing' ||
  pathname.startsWith('/fr') ||
  pathname.startsWith('/es') ||
  pathname.startsWith('/mentions') ||
  pathname.startsWith('/cgv') ||
  pathname.startsWith('/politique');

// Get localized URLs based on current language
const homeUrl = currentLang === 'en' ? '/' : `/${currentLang}`;
const pricingUrl = currentLang === 'en' ? '/pricing' : currentLang === 'fr' ? '/fr/tarification' : '/es/precios';
const logoHref = isPublicPage ? homeUrl : isDemoPage ? '/demo_gallery' : '/account/gallery';
---

<header class="bg-[#F5F0E8]/95 dark:bg-[#333333]/95 backdrop-blur-xs border-b border-burgundy-old/10 dark:border-[#F5F0E8]/10 sticky top-0 z-50 transition-colors duration-300">
  <nav class="max-w-6xl mx-auto px-4 h-16 flex items-center justify-between">
    <!-- Logo -->
    <a href={logoHref} class="flex items-center gap-3 group">
      <!-- Wedding Rings Icon -->
      <svg viewBox="0 0 32 32" class="w-8 h-8" fill="none" xmlns="http://www.w3.org/2000/svg">
        <circle cx="11" cy="16" r="7" stroke="#ae1725" stroke-width="2" fill="none" class="group-hover:stroke-[#c92a38] transition-colors"/>
        <circle cx="21" cy="16" r="7" stroke="#ae1725" stroke-width="2" fill="none" class="group-hover:stroke-[#c92a38] transition-colors"/>
        <polygon points="11,7 9,10 13,10" fill="#ae1725" class="group-hover:fill-[#c92a38] transition-colors"/>
      </svg>
      <span class="font-serif text-xl text-charcoal dark:text-cream tracking-wide group-hover:text-burgundy-old dark:group-hover:text-[#c92a38] transition-colors">
        Reflets de Bonheur
      </span>
    </a>

    <!-- Navigation Links -->
    <div class="flex items-center gap-1 sm:gap-2">
      {isPublicPage ? (
        // Public page navigation (Landing & Pricing)
        <>
          <a
            href={homeUrl}
            class={`px-4 py-2 text-sm font-sans tracking-wide transition-colors ${
              pathname === '/' || pathname === '/fr' || pathname === '/es' || pathname === '/fr/' || pathname === '/es/'
                ? 'text-burgundy-old font-medium'
                : 'text-charcoal-light dark:text-cream/70 hover:text-burgundy-old dark:hover:text-[#c92a38]'
            }`}
          >
            {t.nav.home}
          </a>
          <a
            href={pricingUrl}
            class={`px-4 py-2 text-sm font-sans tracking-wide transition-colors ${
              pathname === '/pricing' || pathname === '/fr/tarification' || pathname === '/es/precios'
                ? 'text-burgundy-old font-medium'
                : 'text-charcoal-light dark:text-cream/70 hover:text-burgundy-old dark:hover:text-[#c92a38]'
            }`}
          >
            {t.nav.pricing}
          </a>
          <a
            href="/demo_gallery"
            class="px-4 py-2 text-sm font-sans tracking-wide text-charcoal-light dark:text-cream/70 hover:text-burgundy-old dark:hover:text-[#c92a38] transition-colors"
          >
            {t.nav.demo}
          </a>
          <a
            href="/connexion"
            class="ml-2 px-5 py-2 bg-burgundy-old text-cream text-sm font-sans font-medium tracking-wide hover:bg-[#c92a38] transition-all"
          >
            {t.nav.login}
          </a>
        </>
      ) : isDemoPage ? (
        // Demo page navigation
        <>
          <a
            href="/demo_gallery"
            class="px-4 py-2 text-sm font-sans tracking-wide text-charcoal-light dark:text-cream/70 hover:text-burgundy-old dark:hover:text-[#c92a38] transition-colors"
          >
            Site Web
          </a>
          <a
            href="/demo_gallery"
            class={`px-4 py-2 text-sm font-sans tracking-wide transition-colors ${
              pathname === '/demo_gallery' || pathname === '/demo_gallery/'
                ? 'text-burgundy-old font-medium border-b-2 border-burgundy-old'
                : 'text-charcoal-light dark:text-cream/70 hover:text-burgundy-old dark:hover:text-[#c92a38]'
            }`}
          >
            Galerie
          </a>
          <a
            href="/demo_livre-or"
            class={`flex items-center gap-2 px-4 py-2 text-sm font-sans tracking-wide transition-colors ${
              pathname === '/demo_livre-or' || pathname === '/demo_livre-or/'
                ? 'text-burgundy-old font-medium border-b-2 border-burgundy-old'
                : 'text-charcoal-light dark:text-cream/70 hover:text-burgundy-old dark:hover:text-[#c92a38]'
            }`}
          >
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
            </svg>
            <span class="hidden sm:inline">Livre d'Or</span>
          </a>
          <a
            href="/pricing"
            class="ml-2 px-5 py-2 bg-burgundy-old text-cream text-sm font-sans font-medium tracking-wide hover:bg-[#c92a38] transition-all"
          >
            Commander
          </a>
        </>
      ) : (
        // App navigation (Gallery, Guestbook, Admin)
        <>
          <a
            href="/account/gallery"
            class={`px-4 py-2 text-sm font-sans tracking-wide transition-colors ${
              pathname === '/account/gallery'
                ? 'text-burgundy-old font-medium border-b-2 border-burgundy-old'
                : 'text-charcoal-light dark:text-cream/70 hover:text-burgundy-old dark:hover:text-[#c92a38]'
            }`}
          >
            Galerie
          </a>

          <a
            href="/guestbook"
            class={`flex items-center gap-2 px-4 py-2 text-sm font-sans tracking-wide transition-colors ${
              pathname === '/guestbook'
                ? 'text-burgundy-old font-medium border-b-2 border-burgundy-old'
                : 'text-charcoal-light dark:text-cream/70 hover:text-burgundy-old dark:hover:text-[#c92a38]'
            }`}
          >
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
            </svg>
            <span class="hidden sm:inline">Livre d'Or</span>
          </a>

          <!-- Admin Link - will be hidden/shown by client-side JS -->
          <a
            href="/admin"
            id="admin-link"
            class={`flex items-center gap-2 px-4 py-2 text-sm font-sans tracking-wide transition-colors ${
              pathname === '/admin'
                ? 'text-burgundy-old font-medium border-b-2 border-burgundy-old'
                : 'text-charcoal-light dark:text-cream/70 hover:text-burgundy-old dark:hover:text-[#c92a38]'
            }`}
            style="display: none;"
          >
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"></path>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
            </svg>
            <span class="hidden sm:inline">Admin</span>
          </a>

          <!-- Logout Button (only on app pages) -->
          <button
            id="logout-btn"
            class="ml-2 text-charcoal-light dark:text-cream/70 hover:text-burgundy-old dark:hover:text-[#c92a38] transition-colors"
            aria-label="Se déconnecter"
          >
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"></path>
            </svg>
          </button>
        </>
      )}

      <!-- Language Toggle (on public pages) -->
      {isPublicPage && (
        <LanguageToggle currentLang={currentLang} currentPath={pathname} client:load />
      )}

      <!-- Theme Toggle Button (on all pages) -->
      <button
        id="theme-toggle"
        class="ml-2 p-2 text-charcoal-light dark:text-cream/70 hover:text-burgundy-old dark:hover:text-[#c92a38] transition-colors"
        aria-label="Basculer le thème"
        title="Basculer le thème"
      >
        <svg id="theme-icon-light" class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z"></path>
        </svg>
        <svg id="theme-icon-dark" class="w-5 h-5 hidden" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z"></path>
        </svg>
      </button>
    </div>
  </nav>
</header>

<script>
  // Theme management
  const THEME_KEY = 'reflets_theme';

  function getTheme() {
    const stored = localStorage.getItem(THEME_KEY);
    if (stored === 'light' || stored === 'dark') return stored;

    // Check system preference
    if (window.matchMedia && window.matchMedia('(prefers-color-scheme: dark)').matches) {
      return 'dark';
    }

    return 'light';
  }

  function applyTheme(theme) {
    const root = document.documentElement;
    const lightIcon = document.getElementById('theme-icon-light');
    const darkIcon = document.getElementById('theme-icon-dark');

    if (theme === 'dark') {
      root.classList.add('dark');
      if (lightIcon) lightIcon.classList.add('hidden');
      if (darkIcon) darkIcon.classList.remove('hidden');
    } else {
      root.classList.remove('dark');
      if (lightIcon) lightIcon.classList.remove('hidden');
      if (darkIcon) darkIcon.classList.add('hidden');
    }
  }

  function toggleTheme() {
    const current = getTheme();
    const newTheme = current === 'light' ? 'dark' : 'light';
    localStorage.setItem(THEME_KEY, newTheme);
    applyTheme(newTheme);
  }

  // Check if user is admin and show/hide admin link
  function updateAdminLink() {
    const isAdmin = localStorage.getItem('reflets_is_admin') === 'true';
    const adminLink = document.getElementById('admin-link');
    if (adminLink) {
      adminLink.style.display = isAdmin ? 'flex' : 'none';
    }
  }

  // Handle logout
  function handleLogout() {
    localStorage.removeItem('reflets_auth_code');
    localStorage.removeItem('reflets_is_admin');
    window.location.href = '/connexion';
  }

  // Initialize on page load
  const currentTheme = getTheme();
  applyTheme(currentTheme);
  updateAdminLink();

  // Attach theme toggle handler
  const themeToggle = document.getElementById('theme-toggle');
  if (themeToggle) {
    themeToggle.addEventListener('click', toggleTheme);
  }

  // Attach logout handler
  const logoutBtn = document.getElementById('logout-btn');
  if (logoutBtn) {
    logoutBtn.addEventListener('click', handleLogout);
  }

  // Update admin link on storage changes (if user opens multiple tabs)
  window.addEventListener('storage', updateAdminLink);

  // Listen for system theme changes
  if (window.matchMedia) {
    window.matchMedia('(prefers-color-scheme: dark)').addEventListener('change', e => {
      // Only update if user hasn't set a manual preference
      if (!localStorage.getItem(THEME_KEY)) {
        const newTheme = e.matches ? 'dark' : 'light';
        applyTheme(newTheme);
      }
    });
  }
</script>
