---
import MainLayout from '../../layouts/MainLayout.astro';
import { GalleryGrid } from '../../components/gallery/GalleryGrid';

// TODO: These will come from the wedding data in production
const coupleName = 'Julie & Thomas';
const weddingDate = '15 Août 2026';
---

<MainLayout
  title="Galerie - Reflets de Bonheur"
  description="Découvrez tous les moments précieux de ce jour spécial"
  showHeader={false}
>
  <section class="min-h-screen bg-gradient-to-b from-[#f7f2f5] via-[#f8f4f8] to-[#efe9f0]">
    <div class="w-full px-4 sm:px-6 lg:px-10 pt-8 pb-16">
      <!-- Mobile Header -->
      <div class="flex items-center justify-between md:hidden text-charcoal/60">
        <button class="w-10 h-10 flex items-center justify-center rounded-full bg-white/70 border border-charcoal/10">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
        </button>
        <span class="font-serif text-base text-charcoal">{coupleName}</span>
        <div class="w-10 h-10 rounded-full bg-white/70 border border-charcoal/10 flex items-center justify-center text-xs text-charcoal/50">
          JT
        </div>
      </div>

      <!-- Desktop Header -->
      <div class="hidden md:block text-center">
        <h1 class="font-serif text-4xl lg:text-5xl text-charcoal tracking-wide">
          {coupleName}
        </h1>
        <nav class="mt-5 flex items-center justify-center gap-6 text-xs uppercase tracking-[0.3em] text-charcoal/60">
          <a href="/" class="hover:text-charcoal transition-colors">Accueil</a>
          <a href="/account/gallery" class="text-charcoal border-b border-charcoal pb-1">Galerie</a>
          <a href="/guestbook" class="hover:text-charcoal transition-colors">Livre d'or</a>
          <a href="/connexion" class="hover:text-charcoal transition-colors">RSVP</a>
        </nav>
      </div>

      <div class="mt-8 border-t border-charcoal/10"></div>

      <div class="text-center mt-6">
        <p class="text-xs uppercase tracking-[0.35em] text-charcoal/50">Moments inoubliables</p>
        <p class="text-sm text-charcoal/50 mt-2">Galerie de mariage · {weddingDate}</p>
      </div>

      <div class="mt-10">
        <GalleryGrid client:load variant="public" />
      </div>
    </div>
  </section>
</MainLayout>
