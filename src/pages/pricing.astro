---
import MainLayout from '../layouts/MainLayout.astro';
import Header from '../components/layout/Header.astro';
import Footer from '../components/layout/Footer.astro';
import { Check, X, HelpCircle, Camera, BookHeart, Globe, ArrowRight } from 'lucide-react';

const lang = 'en';
---

<MainLayout
  title="Pricing - Reflets de Bonheur"
  description="Simple and transparent pricing: $199 for 2 years with your custom domain included."
  showHeader={true}
>
  <Header slot="header" />

  <!-- Hero Section -->
  <section class="py-20 bg-cream">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center max-w-3xl mx-auto mb-16">
        <span class="tracking-[0.2em] uppercase text-xs font-sans font-medium text-[#ae1725]">
          Pricing
        </span>
        <h1 class="font-serif text-4xl sm:text-5xl font-light text-charcoal mt-4 mb-6">
          Simple and transparent pricing
        </h1>
        <div class="w-16 h-px mx-auto mb-6" style="background-color: #ae1725;"></div>
        <p class="text-charcoal-light font-light">
          Everything you need to preserve your wedding, no surprises
        </p>
      </div>

      <!-- Pricing Card -->
      <div class="max-w-3xl mx-auto">
        <div class="bg-white border p-8 sm:p-12 relative" style="border-color: rgba(174, 23, 37, 0.2);">
          <!-- Badge -->
          <div class="absolute -top-4 left-1/2 -translate-x-1/2">
            <span class="text-white text-xs font-sans font-medium tracking-wider uppercase px-4 py-2" style="background-color: #ae1725;">
              Launch Offer
            </span>
          </div>

          <div class="text-center mb-10 pt-4">
            <h2 class="font-serif text-2xl text-charcoal mb-2">Complete Package</h2>
            <p class="text-charcoal-light font-light text-sm">All services included</p>
          </div>

          <!-- Price -->
          <div class="text-center mb-10">
            <div class="flex items-center justify-center gap-4 mb-3">
              <span class="text-2xl text-charcoal-light/50 line-through font-light">$249</span>
              <span class="font-serif text-6xl sm:text-7xl font-light text-[#ae1725]">$199</span>
            </div>
            <p class="text-charcoal-light mb-2">
              for <strong class="text-charcoal">2 years</strong>
              <span class="ml-2 font-medium text-[#ae1725]">(Save $50)</span>
            </p>
            <div class="inline-flex items-center gap-2 px-4 py-2 mt-2" style="background-color: rgba(174, 23, 37, 0.05);">
              <span class="text-sm text-charcoal-light">
                Then <strong class="text-[#ae1725]">$19.99/year</strong> to keep your gallery
              </span>
            </div>
          </div>

          <!-- Divider -->
          <div class="flex items-center gap-4 my-8">
            <div class="flex-1 h-px" style="background-color: rgba(174, 23, 37, 0.1);"></div>
            <span class="text-sm" style="color: rgba(174, 23, 37, 0.4);">✦</span>
            <div class="flex-1 h-px" style="background-color: rgba(174, 23, 37, 0.1);"></div>
          </div>

          <!-- Three Services -->
          <div class="grid md:grid-cols-3 gap-6 mb-10">
            <div class="text-center p-4">
              <Camera class="w-6 h-6 mx-auto mb-3 text-[#ae1725]" />
              <h4 class="font-medium text-charcoal text-sm mb-2">Photo Gallery</h4>
              <ul class="text-xs text-charcoal-light space-y-1 font-light">
                <li>Unlimited upload</li>
                <li>Organized albums</li>
                <li>ZIP download</li>
              </ul>
            </div>

            <div class="text-center p-4 border-x" style="border-color: rgba(174, 23, 37, 0.1);">
              <BookHeart class="w-6 h-6 mx-auto mb-3 text-[#ae1725]" />
              <h4 class="font-medium text-charcoal text-sm mb-2">Guestbook</h4>
              <ul class="text-xs text-charcoal-light space-y-1 font-light">
                <li>Unlimited messages</li>
                <li>Admin moderation</li>
                <li>PDF export</li>
              </ul>
            </div>

            <div class="text-center p-4">
              <Globe class="w-6 h-6 mx-auto mb-3 text-[#ae1725]" />
              <h4 class="font-medium text-charcoal text-sm mb-2">Wedding Website</h4>
              <ul class="text-xs text-charcoal-light space-y-1 font-light">
                <li>Custom domain</li>
                <li>Schedule & venue</li>
                <li>Built-in RSVP</li>
              </ul>
            </div>
          </div>

          <!-- CTA -->
          <div class="text-center">
            <a
              href="/connexion"
              class="inline-flex items-center px-10 py-4 text-white font-sans font-medium text-sm tracking-wider uppercase transition-all hover:opacity-90"
              style="background-color: #ae1725;"
            >
              Get started now
              <ArrowRight class="ml-2 w-4 h-4" />
            </a>
            <p class="mt-4 text-charcoal-light text-sm font-light">
              30-day money-back guarantee
            </p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Features List -->
  <section class="py-20" style="background-color: rgba(174, 23, 37, 0.03);">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <span class="tracking-[0.2em] uppercase text-xs font-sans font-medium text-[#ae1725]">
          Included in the offer
        </span>
        <h2 class="font-serif text-3xl sm:text-4xl font-light text-charcoal mt-4">
          Everything you need
        </h2>
      </div>

      <div class="max-w-4xl mx-auto grid sm:grid-cols-2 gap-4">
        {[
          "Unlimited photos & videos gallery",
          "Custom domain name",
          "Digital guestbook",
          "Wedding website",
          "Mobile app (PWA)",
          "Offline mode",
          "Bulk download (ZIP)",
          "PDF export of guestbook",
          "Category albums",
          "Reactions & favorites",
          "Slideshow mode",
          "Email support"
        ].map(feature => (
          <div class="flex items-center gap-3 p-3 bg-white">
            <div class="w-5 h-5 flex items-center justify-center flex-shrink-0" style="border: 1px solid #ae1725; color: #ae1725;">
              <Check class="w-3 h-3" />
            </div>
            <span class="text-charcoal font-light text-sm">{feature}</span>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- FAQ Section -->
  <section class="py-20 bg-cream">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <span class="tracking-[0.2em] uppercase text-xs font-sans font-medium text-[#ae1725]">
          FAQ
        </span>
        <h2 class="font-serif text-3xl sm:text-4xl font-light text-charcoal mt-4">
          Frequently Asked Questions
        </h2>
      </div>

      <div class="max-w-3xl mx-auto space-y-4">
        <!-- FAQ Item 1 -->
        <div class="bg-white border p-6" style="border-color: rgba(174, 23, 37, 0.1);">
          <div class="flex items-start gap-3">
            <HelpCircle class="w-5 h-5 flex-shrink-0 mt-0.5 text-[#ae1725]" />
            <div>
              <h3 class="font-medium text-charcoal mb-2">
                How does the custom domain work?
              </h3>
              <p class="text-charcoal-light font-light text-sm leading-relaxed">
                You choose your name during signup (e.g., john-jane.reflets-bonheur.fr).
                This will be the unique address for your wedding space, accessible to all your guests.
              </p>
            </div>
          </div>
        </div>

        <!-- FAQ Item 2 -->
        <div class="bg-white border p-6" style="border-color: rgba(174, 23, 37, 0.1);">
          <div class="flex items-start gap-3">
            <HelpCircle class="w-5 h-5 flex-shrink-0 mt-0.5 text-[#ae1725]" />
            <div>
              <h3 class="font-medium text-charcoal mb-2">
                How does renewal work?
              </h3>
              <p class="text-charcoal-light font-light text-sm leading-relaxed">
                After 2 years, if you want to keep your gallery online (read-only mode, no new uploads),
                it's only $19.99/year. Renewal is optional - you can download your data at any time.
              </p>
            </div>
          </div>
        </div>

        <!-- FAQ Item 3 -->
        <div class="bg-white border p-6" style="border-color: rgba(174, 23, 37, 0.1);">
          <div class="flex items-start gap-3">
            <HelpCircle class="w-5 h-5 flex-shrink-0 mt-0.5 text-[#ae1725]" />
            <div>
              <h3 class="font-medium text-charcoal mb-2">
                Are my photos secure?
              </h3>
              <p class="text-charcoal-light font-light text-sm leading-relaxed">
                Yes, your data is encrypted and automatically backed up.
                Only people with the access code can view your gallery.
              </p>
            </div>
          </div>
        </div>

        <!-- FAQ Item 4 -->
        <div class="bg-white border p-6" style="border-color: rgba(174, 23, 37, 0.1);">
          <div class="flex items-start gap-3">
            <HelpCircle class="w-5 h-5 flex-shrink-0 mt-0.5 text-[#ae1725]" />
            <div>
              <h3 class="font-medium text-charcoal mb-2">
                Can I download my photos?
              </h3>
              <p class="text-charcoal-light font-light text-sm leading-relaxed">
                At any time, you can download all your photos and videos in one click (ZIP format).
                The guestbook can be exported as PDF.
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Comparison Section -->
  <section class="py-20" style="background-color: rgba(174, 23, 37, 0.03);">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <span class="tracking-[0.2em] uppercase text-xs font-sans font-medium text-[#ae1725]">
          Comparison
        </span>
        <h2 class="font-serif text-3xl sm:text-4xl font-light text-charcoal mt-4">
          Why choose us?
        </h2>
      </div>

      <div class="max-w-5xl mx-auto overflow-x-auto">
        <table class="w-full bg-white">
          <thead>
            <tr style="background-color: #ae1725;">
              <th class="px-4 py-4 text-left text-sm font-medium tracking-wide text-white">Feature</th>
              <th class="px-4 py-4 text-center text-sm font-medium tracking-wide text-white">Reflets de Bonheur</th>
              <th class="px-4 py-4 text-center text-sm font-medium tracking-wide text-white">Google Photos</th>
              <th class="px-4 py-4 text-center text-sm font-medium tracking-wide text-white">WeTransfer</th>
            </tr>
          </thead>
          <tbody class="divide-y" style="--tw-divide-opacity: 0.1; border-color: rgba(174, 23, 37, 0.1);">
            <tr>
              <td class="px-4 py-4 text-sm text-charcoal">Price</td>
              <td class="px-4 py-4 text-center font-medium text-sm text-[#ae1725]">$199/2 years</td>
              <td class="px-4 py-4 text-center text-charcoal-light text-sm">Free (limited)</td>
              <td class="px-4 py-4 text-center text-charcoal-light text-sm">$12/month</td>
            </tr>
            <tr>
              <td class="px-4 py-4 text-sm text-charcoal">Custom domain</td>
              <td class="px-4 py-4 text-center"><Check class="w-5 h-5 mx-auto text-[#ae1725]" /></td>
              <td class="px-4 py-4 text-center"><X class="w-5 h-5 text-charcoal-light/40 mx-auto" /></td>
              <td class="px-4 py-4 text-center"><X class="w-5 h-5 text-charcoal-light/40 mx-auto" /></td>
            </tr>
            <tr>
              <td class="px-4 py-4 text-sm text-charcoal">Guestbook</td>
              <td class="px-4 py-4 text-center"><Check class="w-5 h-5 mx-auto text-[#ae1725]" /></td>
              <td class="px-4 py-4 text-center"><X class="w-5 h-5 text-charcoal-light/40 mx-auto" /></td>
              <td class="px-4 py-4 text-center"><X class="w-5 h-5 text-charcoal-light/40 mx-auto" /></td>
            </tr>
            <tr>
              <td class="px-4 py-4 text-sm text-charcoal">Wedding website</td>
              <td class="px-4 py-4 text-center"><Check class="w-5 h-5 mx-auto text-[#ae1725]" /></td>
              <td class="px-4 py-4 text-center"><X class="w-5 h-5 text-charcoal-light/40 mx-auto" /></td>
              <td class="px-4 py-4 text-center"><X class="w-5 h-5 text-charcoal-light/40 mx-auto" /></td>
            </tr>
            <tr>
              <td class="px-4 py-4 text-sm text-charcoal">Original quality</td>
              <td class="px-4 py-4 text-center"><Check class="w-5 h-5 mx-auto text-[#ae1725]" /></td>
              <td class="px-4 py-4 text-center text-charcoal-light text-sm">Compressed</td>
              <td class="px-4 py-4 text-center"><Check class="w-5 h-5 mx-auto text-[#ae1725]" /></td>
            </tr>
            <tr>
              <td class="px-4 py-4 text-sm text-charcoal">No ads</td>
              <td class="px-4 py-4 text-center"><Check class="w-5 h-5 mx-auto text-[#ae1725]" /></td>
              <td class="px-4 py-4 text-center"><X class="w-5 h-5 text-charcoal-light/40 mx-auto" /></td>
              <td class="px-4 py-4 text-center text-charcoal-light text-sm">Pro version</td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </section>

  <!-- Final CTA -->
  <section class="py-20" style="background-color: #ae1725;">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center max-w-2xl mx-auto">
        <h2 class="font-serif text-3xl sm:text-4xl font-light mb-6 text-white">
          Ready to get started?
        </h2>
        <p class="text-white/80 font-light mb-4">
          <span class="line-through text-white/50">$249</span>
          <strong class="text-white ml-2">$199</strong> for 2 full years.
        </p>
        <p class="text-white/70 font-light text-sm mb-8">
          Custom domain included • Then $19.99/year for renewal
        </p>
        <a
          href="/connexion"
          class="inline-flex items-center px-10 py-4 bg-white font-sans font-medium text-sm tracking-wider uppercase hover:bg-gray-100 transition-all text-[#ae1725]"
        >
          Get started now
          <ArrowRight class="ml-2 w-4 h-4" />
        </a>
        <p class="mt-6 text-white/60 text-sm font-light">
          30-day money-back guarantee
        </p>
      </div>
    </div>
  </section>

  <Footer slot="footer" />
</MainLayout>
