---
import MainLayout from '../layouts/MainLayout.astro';
import Header from '../components/layout/Header.astro';
import Footer from '../components/layout/Footer.astro';
import { Camera, BookHeart, Globe, Check, ArrowRight, Sparkles, Shield, Smartphone, Download, Clock, Star, Quote, HelpCircle, Users, Heart } from 'lucide-react';

const lang = 'en';
const acceptLanguage = Astro.request?.headers?.get('accept-language') ?? '';
const locale = acceptLanguage.split(',')[0] || 'en-US';
const currency = new Intl.NumberFormat(locale, { style: 'currency', currency: 'USD', maximumFractionDigits: 0 });
const currencyPrecise = new Intl.NumberFormat(locale, { style: 'currency', currency: 'USD', minimumFractionDigits: 2, maximumFractionDigits: 2 });
const dateFormatter = new Intl.DateTimeFormat(locale, { month: 'long', year: 'numeric' });
const couplesTrusted = new Intl.NumberFormat(locale).format(500);
const priceOriginal = 249;
const pricePromo = 199;
const renewalAnnual = 19.99;
const durationYears = 2;
const priceOriginalLabel = currency.format(priceOriginal);
const pricePromoLabel = currency.format(pricePromo);
const renewalAnnualLabel = currencyPrecise.format(renewalAnnual);
const durationLabel = new Intl.NumberFormat(locale).format(durationYears);
const guaranteeDaysLabel = new Intl.NumberFormat(locale).format(30);
const averagePhotos = new Intl.NumberFormat(locale).format(847);
const setupMinutesLabel = new Intl.NumberFormat(locale).format(2);
const stepLabels = [1, 2, 3].map((step) => new Intl.NumberFormat(locale).format(step));
const discountPercentLabel = new Intl.NumberFormat(locale, { style: 'percent', maximumFractionDigits: 0 }).format((priceOriginal - pricePromo) / priceOriginal);

// Testimonials data
const testimonials = [
  {
    name: "Emily & James",
    date: new Date(2025, 8, 1),
    quote: "The experience felt like a private concierge for our memories. Every photo appeared instantly and in original quality.",
    location: "London",
    rating: 5
  },
  {
    name: "Sarah & Michael",
    date: new Date(2025, 5, 1),
    quote: "The guestbook became our keepsake. Elegant, easy for guests, and beautiful to revisit whenever we want.",
    location: "New York",
    rating: 5
  },
  {
    name: "Jessica & David",
    date: new Date(2025, 7, 1),
    quote: "Premium, simple, and fast. The QR code on the tables made sharing effortless for everyone.",
    location: "Sydney",
    rating: 5
  }
];

// FAQ data
const faqs = [
  {
    question: "How long are my photos kept?",
    answer: `Your memories are hosted for ${durationLabel}\u00a0years with your package. After that, renew for ${renewalAnnualLabel}/year or download everything in one elegant click.`
  },
  {
    question: "Do my guests need to create an account?",
    answer: "No. Guests access your space via a private link or QR code. No account, no app, no friction."
  },
  {
    question: "Can I download everything?",
    answer: "Yes, anytime. One-click ZIP download in original quality, plus a PDF export of the guestbook."
  },
  {
    question: "Does it feel like an app on mobile?",
    answer: "Yes. Add it to your home screen in one tap for a premium app-like experience, even offline."
  }
];
---

<MainLayout
  title="Reflets de Bonheur - A Private Wedding Gallery Worth Keeping Forever"
  description="Luxury wedding memory space: collaborative gallery, digital guestbook, and bespoke website. Collect every guest moment in one refined experience."
  showHeader={true}
>
  <Header slot="header" />

  <!-- Hero Section - Emotional & Impactful -->
  <section class="relative min-h-screen flex items-center justify-center overflow-hidden">
    <!-- Background Image with better overlay -->
    <div class="absolute inset-0">
      <img
        src="/images/hero-wedding.jpg"
        alt="Elegant wedding"
        class="w-full h-full object-cover"
        loading="eager"
        fetchpriority="high"
        decoding="async"
        width="1920"
        height="1280"
      />
      <div class="absolute inset-0 bg-linear-to-b from-black/50 via-black/30 to-black/60"></div>
    </div>

    <div class="container mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
      <div class="text-center max-w-4xl mx-auto pt-10">
        <!-- Brand Title with Decorations -->
        <div class="mb-8 flex flex-col items-center justify-center gap-2">
          <div class="flex items-center gap-3">
            <span class="text-2xl opacity-80">ðŸŒ¸</span>
            <span class="text-xl opacity-70">ðŸ’«</span>
            <Heart class="w-5 h-5 text-rose-gold animate-pulse motion-reduce:animate-none" fill="currentColor" aria-hidden="true" />
            <p class="font-script text-4xl sm:text-5xl text-white drop-shadow-lg">
              Reflets&nbsp;de&nbsp;Bonheur
            </p>
            <Heart class="w-5 h-5 text-rose-gold animate-pulse motion-reduce:animate-none" fill="currentColor" aria-hidden="true" />
            <span class="text-xl opacity-70">ðŸ’«</span>
            <span class="text-2xl opacity-80">ðŸŒ¸</span>
          </div>
          <span class="text-white/70 text-sm italic">(Reflections of Happiness)</span>
        </div>

        <!-- Social Proof Badge -->
        <div class="mb-6 inline-flex items-center gap-2 bg-white/10 backdrop-blur-xs px-5 py-2 rounded-full border border-white/20">
          <Users class="w-4 h-4 text-white" aria-hidden="true" />
          <span class="text-white/90 text-sm font-medium">
            Trusted by {couplesTrusted}+&nbsp;couples worldwide
          </span>
        </div>

        <!-- Main Title - Emotional Hook -->
        <h1 class="font-serif text-4xl sm:text-5xl lg:text-6xl font-light text-white mb-6 leading-tight">
          A Private Gallery<br />
          <span class="italic text-white/90">Crafted for Your Wedding Story</span>
        </h1>

        <!-- Value Proposition - Clear & Impactful -->
        <p class="text-lg sm:text-xl text-white/90 mb-10 max-w-2xl mx-auto leading-relaxed font-light">
          Gather <strong class="text-white">every guest photo and message</strong> in one luxury space.
          Gallery, guestbook, and bespoke wedding site â€” perfectly unified.
        </p>

        <!-- CTA Buttons - Action Oriented -->
        <div class="flex flex-col sm:flex-row gap-4 justify-center items-center mb-10">
          <a
            href="/pricing"
            class="group inline-flex items-center px-8 py-4 bg-burgundy text-white rounded-lg font-sans font-semibold text-base tracking-wide hover:bg-burgundy-light transition-colors transition-shadow transition-transform duration-300 shadow-lg hover:shadow-xl"
          >
            Create Your Private Space
            <ArrowRight class="ml-2 w-5 h-5 group-hover:translate-x-1 transition-transform" aria-hidden="true" />
          </a>
          <a
            href="/demo_gallery"
            class="inline-flex items-center px-8 py-4 bg-white/10 backdrop-blur-xs text-white border border-white/30 rounded-lg font-sans font-medium text-base hover:bg-white/20 transition-colors duration-300"
          >
            <span class="mr-2">â–¶</span>
            Experience the Demo
          </a>
        </div>

        <!-- Pricing Highlight - Clear Value -->
        <div class="inline-flex flex-col sm:flex-row items-center gap-4 bg-white/10 backdrop-blur-xs px-6 py-4 rounded-xl border border-white/20">
          <div class="flex items-baseline gap-2 tabular-nums">
            <span class="line-through text-white/50 text-lg">{priceOriginalLabel}</span>
            <span class="text-white font-bold text-3xl">{pricePromoLabel}</span>
            <span class="text-white/80">for {durationLabel}&nbsp;years</span>
          </div>
          <div class="hidden sm:block w-px h-8 bg-white/30"></div>
          <div class="flex items-center gap-2 text-white/80 text-sm">
