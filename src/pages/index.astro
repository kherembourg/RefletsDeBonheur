      <!-- Services Grid - Improved Cards -->
      <div class="grid md:grid-cols-3 gap-8 max-w-6xl mx-auto">
        <!-- Service 1: Gallery -->
        <div class="group bg-cream dark:bg-[#1b1b1b] rounded-2xl p-9 transition-transform transition-shadow transition-colors duration-300 hover:shadow-xl hover:-translate-y-2 border border-transparent hover:border-burgundy/20 dark:border-white/10">
          <div class="w-16 h-16 mb-6 flex items-center justify-center bg-burgundy/10 rounded-xl group-hover:bg-burgundy group-hover:text-white transition-colors duration-300">
            <Camera class="w-8 h-8 text-burgundy group-hover:text-white transition-colors" aria-hidden="true" />
          </div>
          <h3 class="font-serif text-2xl text-charcoal dark:text-cream mb-3">Photo Gallery</h3>
          <p class="text-charcoal-light dark:text-cream/70 leading-relaxed mb-4">
            Guests upload instantly â€” you receive every candid and professional-worthy shot.
          </p>
          <ul class="space-y-2 text-sm text-charcoal-light dark:text-cream/70">
            <li class="flex items-center gap-2">
              <Check class="w-4 h-4 text-burgundy" aria-hidden="true" />
              Unlimited uploads, original quality
            </li>
            <li class="flex items-center gap-2">
              <Check class="w-4 h-4 text-burgundy" aria-hidden="true" />
              Curated albums by moment
            </li>
            <li class="flex items-center gap-2">
              <Check class="w-4 h-4 text-burgundy" aria-hidden="true" />
              One-click ZIP archive
            </li>
          </ul>
        </div>

        <!-- Service 2: Guestbook -->
        <div class="group bg-cream dark:bg-[#1b1b1b] rounded-2xl p-9 transition-transform transition-shadow transition-colors duration-300 hover:shadow-xl hover:-translate-y-2 border border-transparent hover:border-burgundy/20 dark:border-white/10">
          <div class="w-16 h-16 mb-6 flex items-center justify-center bg-burgundy/10 rounded-xl group-hover:bg-burgundy group-hover:text-white transition-colors duration-300">
            <BookHeart class="w-8 h-8 text-burgundy group-hover:text-white transition-colors" aria-hidden="true" />
          </div>
          <h3 class="font-serif text-2xl text-charcoal dark:text-cream mb-3">Guestbook</h3>
          <p class="text-charcoal-light dark:text-cream/70 leading-relaxed mb-4">
            Handwritten-style messages preserved in a timeless layout, ready to revisit forever.
          </p>
          <ul class="space-y-2 text-sm text-charcoal-light dark:text-cream/70">
            <li class="flex items-center gap-2">
              <Check class="w-4 h-4 text-burgundy" aria-hidden="true" />
              Unlimited messages
            </li>
            <li class="flex items-center gap-2">
              <Check class="w-4 h-4 text-burgundy" aria-hidden="true" />
              Elegant moderation tools
            </li>
            <li class="flex items-center gap-2">
              <Check class="w-4 h-4 text-burgundy" aria-hidden="true" />
              Print-ready PDF export
            </li>
          </ul>
        </div>

        <!-- Service 3: Website -->
        <div class="group bg-cream dark:bg-[#1b1b1b] rounded-2xl p-9 transition-transform transition-shadow transition-colors duration-300 hover:shadow-xl hover:-translate-y-2 border border-transparent hover:border-burgundy/20 dark:border-white/10">
          <div class="w-16 h-16 mb-6 flex items-center justify-center bg-burgundy/10 rounded-xl group-hover:bg-burgundy group-hover:text-white transition-colors duration-300">
            <Globe class="w-8 h-8 text-burgundy group-hover:text-white transition-colors" aria-hidden="true" />
          </div>
          <h3 class="font-serif text-2xl text-charcoal dark:text-cream mb-3">Wedding Website</h3>
          <p class="text-charcoal-light dark:text-cream/70 leading-relaxed mb-4">
            A bespoke address with schedule, venue, and RSVP â€” polished for every guest.
          </p>
          <ul class="space-y-2 text-sm text-charcoal-light dark:text-cream/70">
            <li class="flex items-center gap-2">
              <Check class="w-4 h-4 text-burgundy" aria-hidden="true" />
              Custom domain & branding
            </li>
            <li class="flex items-center gap-2">
              <Check class="w-4 h-4 text-burgundy" aria-hidden="true" />
              Timeline, venue & logistics
            </li>
            <li class="flex items-center gap-2">
              <Check class="w-4 h-4 text-burgundy" aria-hidden="true" />
              Built-in RSVP tracking
            </li>
          </ul>
        </div>
      </div>
    </div>
  </section>

  <!-- Why Choose Us - Benefits -->
  <section class="py-24 bg-cream dark:bg-[#0f0f0f]">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
      <div class="max-w-6xl mx-auto">
        <div class="grid lg:grid-cols-2 gap-16 items-center">
          <!-- Image -->
          <div class="relative order-2 lg:order-1">
          <img
            src="/images/wedding-couple.jpg"
            alt="Wedding couple"
            class="w-full h-[450px] object-cover rounded-2xl shadow-xl"
            loading="lazy"
            decoding="async"
            width="800"
            height="533"
          />
            <!-- Floating Card -->
            <div class="absolute -bottom-6 -right-6 bg-white dark:bg-[#141414] rounded-xl p-4 shadow-lg hidden sm:block border border-white/10">
              <div class="flex items-center gap-3">
                <div class="w-12 h-12 bg-burgundy/10 rounded-full flex items-center justify-center">
                  <Camera class="w-6 h-6 text-burgundy" aria-hidden="true" />
                </div>
                <div>
                  <p class="font-bold text-charcoal dark:text-cream">{averagePhotos}&nbsp;photos</p>
                  <p class="text-sm text-charcoal-light dark:text-cream/70">collected on average</p>
                </div>
              </div>
            </div>
          </div>

          <!-- Content -->
          <div class="order-1 lg:order-2">
            <span class="tracking-[0.3em] uppercase text-xs font-sans font-semibold text-burgundy">
              Why Couples Choose Us
            </span>
            <h2 class="font-serif text-3xl sm:text-4xl font-light text-charcoal dark:text-cream mt-3 mb-8">
              A Luxury Experience That Feels Effortless
            </h2>

            <div class="space-y-6">
              <div class="flex items-start gap-4">
                <div class="w-10 h-10 flex items-center justify-center shrink-0 bg-burgundy/10 rounded-lg">
                  <Clock class="w-5 h-5 text-burgundy" aria-hidden="true" />
                </div>
                <div>
                  <h3 class="font-semibold text-charcoal dark:text-cream mb-1">Ready in {setupMinutesLabel}&nbsp;Minutes</h3>
                  <p class="text-charcoal-light dark:text-cream/70 text-sm">Launch your space in minutes with guided setup and polished templates.</p>
                </div>
              </div>

              <div class="flex items-start gap-4">
                <div class="w-10 h-10 flex items-center justify-center shrink-0 bg-burgundy/10 rounded-lg">
                  <Shield class="w-5 h-5 text-burgundy" aria-hidden="true" />
                </div>
                <div>
                  <h3 class="font-semibold text-charcoal dark:text-cream mb-1">Private & Protected</h3>
                  <p class="text-charcoal-light dark:text-cream/70 text-sm">Encrypted storage, private access, and secure hosting built in.</p>
                </div>
              </div>

              <div class="flex items-start gap-4">
                <div class="w-10 h-10 flex items-center justify-center shrink-0 bg-burgundy/10 rounded-lg">
                  <Smartphone class="w-5 h-5 text-burgundy" aria-hidden="true" />
                </div>
                <div>
                  <h3 class="font-semibold text-charcoal dark:text-cream mb-1">Designed for Mobile</h3>
                  <p class="text-charcoal-light dark:text-cream/70 text-sm">Your guests tap once to access the space, even with limited reception.</p>
                </div>
              </div>

              <div class="flex items-start gap-4">
                <div class="w-10 h-10 flex items-center justify-center shrink-0 bg-burgundy/10 rounded-lg">
                  <Download class="w-5 h-5 text-burgundy" aria-hidden="true" />
                </div>
                <div>
                  <h3 class="font-semibold text-charcoal dark:text-cream mb-1">Your Memories Belong to You</h3>
                  <p class="text-charcoal-light dark:text-cream/70 text-sm">Download everything anytime in original quality, ready to archive.</p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Testimonials Section - Social Proof -->
  <section class="py-24 bg-white dark:bg-[#141414]">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <span class="tracking-[0.3em] uppercase text-xs font-sans font-semibold text-burgundy">
          Testimonials
        </span>
        <h2 class="font-serif text-3xl sm:text-4xl font-light text-charcoal dark:text-cream mt-3 mb-4">
          Loved by Modern Couples
        </h2>
        <p class="text-charcoal-light dark:text-cream/70">
          A premium experience trusted for intimate ceremonies and grand celebrations alike
        </p>
      </div>

      {testimonials.length > 0 ? (
        <div class="grid md:grid-cols-3 gap-8 max-w-6xl mx-auto">
          {testimonials.map((testimonial, index) => (
            <div class="bg-cream dark:bg-[#1b1b1b] rounded-2xl p-8 relative border border-white/10" style={`animation-delay: ${index * 100}ms`}>
              <!-- Quote Icon -->
              <Quote class="w-10 h-10 text-burgundy/20 absolute top-6 right-6" aria-hidden="true" />

              <!-- Stars -->
              <div class="flex gap-1 mb-4" role="img" aria-label={`Rated ${testimonial.rating} out of 5`}>
                <span class="sr-only">Rated {testimonial.rating} out of 5</span>
                {[...Array(testimonial.rating)].map(() => (
                  <Star class="w-4 h-4 text-amber-400" fill="currentColor" aria-hidden="true" />
                ))}
              </div>

              <!-- Quote -->
              <p class="text-charcoal dark:text-cream leading-relaxed mb-6 italic break-words">
                &ldquo;{testimonial.quote}&rdquo;
              </p>

              <!-- Author -->
              <div class="flex items-center gap-3">
                <div class="w-10 h-10 rounded-full bg-burgundy/20 flex items-center justify-center">
                  <span class="text-burgundy font-semibold text-sm">
                    {testimonial.name.split(' ')[0][0]}{testimonial.name.split(' ')[2]?.[0] || testimonial.name.split(' ')[1][0]}
                  </span>
                </div>
                <div class="min-w-0">
                  <p class="font-semibold text-charcoal dark:text-cream text-sm break-words">{testimonial.name}</p>
                  <p class="text-charcoal-light dark:text-cream/70 text-xs break-words">{testimonial.location} â€¢ {dateFormatter.format(testimonial.date)}</p>
                </div>
              </div>
            </div>
          ))}
        </div>
      ) : (
        <p class="text-center text-charcoal-light dark:text-cream/70">Testimonials are on the way.</p>
      )}
    </div>
  </section>

  <!-- How it Works -->
  <section class="py-24 bg-cream dark:bg-[#0f0f0f]">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <span class="tracking-[0.3em] uppercase text-xs font-sans font-semibold text-burgundy">
          Easy as {stepLabels[0]}â€“{stepLabels[1]}â€“{stepLabels[2]}
        </span>
        <h2 class="font-serif text-3xl sm:text-4xl font-light text-charcoal dark:text-cream mt-3">
          A Seamless Experience
        </h2>
      </div>

      <div class="max-w-4xl mx-auto">
        <div class="grid md:grid-cols-3 gap-8">
          <!-- Step 1 -->
          <div class="text-center">
            <div class="w-14 h-14 mx-auto mb-6 flex items-center justify-center bg-burgundy text-white rounded-full font-serif text-xl font-bold shadow-lg">
              {stepLabels[0]}
            </div>
            <h3 class="font-serif text-xl text-charcoal dark:text-cream mb-3">Create Your Space</h3>
            <p class="text-charcoal-light dark:text-cream/70 text-sm">
              Choose your address (e.g., emily-james.reflets-bonheur.com) and personalize it to match your wedding.
            </p>
          </div>

          <!-- Connector -->
          <div class="hidden md:flex items-center justify-center">
            <div class="w-full h-px bg-burgundy/30 relative">
              <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-2 h-2 bg-burgundy rounded-full"></div>
            </div>
          </div>

          <!-- Mobile connector placeholder -->
          <div class="md:hidden"></div>

          <!-- Step 2 -->
          <div class="text-center md:col-start-1">
            <div class="w-14 h-14 mx-auto mb-6 flex items-center justify-center bg-burgundy text-white rounded-full font-serif text-xl font-bold shadow-lg">
              {stepLabels[1]}
            </div>
            <h3 class="font-serif text-xl text-charcoal dark:text-cream mb-3">Share the Link</h3>
            <p class="text-charcoal-light dark:text-cream/70 text-sm">
              Send the link to guests or display a QR code. Guests contribute in seconds, no account required.
            </p>
          </div>

          <!-- Connector -->
          <div class="hidden md:flex items-center justify-center">
            <div class="w-full h-px bg-burgundy/30 relative">
              <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-2 h-2 bg-burgundy rounded-full"></div>
            </div>
