---
import MainLayout from '../../layouts/MainLayout.astro';
import { t } from '../../i18n/utils';
import type { Language } from '../../i18n/translations';

export const prerender = false;

const lang = (Astro.url.pathname.startsWith('/fr/') ? 'fr' :
              Astro.url.pathname.startsWith('/es/') ? 'es' :
              'en') as Language;
---

<MainLayout title="Payment Cancelled" lang={lang}>
  <div class="min-h-screen flex items-center justify-center bg-gradient-to-b from-cream to-white p-4">
    <div class="w-full max-w-md">
      <div class="bg-white rounded-xl shadow-sm border border-charcoal/5 p-8">
        {/* Icon */}
        <div class="w-16 h-16 mx-auto mb-6 rounded-full bg-charcoal/5 flex items-center justify-center">
          <svg class="w-8 h-8 text-charcoal/60" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
        </div>

        {/* Title */}
        <h1 class="font-serif text-2xl text-charcoal mb-2 text-center">
          Payment Cancelled
        </h1>

        {/* Message */}
        <p class="text-charcoal/60 text-sm text-center mb-6">
          Your payment was cancelled. Your information has been saved and you can complete your purchase anytime.
        </p>

        {/* What's saved */}
        <div class="bg-cream/50 rounded-lg p-4 mb-6">
          <p class="text-xs text-charcoal/60 mb-2 font-medium">What's saved:</p>
          <ul class="space-y-1 text-sm text-charcoal/80">
            <li class="flex items-start gap-2">
              <svg class="w-4 h-4 text-sage flex-shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
              </svg>
              <span>Your account details</span>
            </li>
            <li class="flex items-start gap-2">
              <svg class="w-4 h-4 text-sage flex-shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
              </svg>
              <span>Your wedding information</span>
            </li>
            <li class="flex items-start gap-2">
              <svg class="w-4 h-4 text-sage flex-shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
              </svg>
              <span>Your chosen theme</span>
            </li>
          </ul>
        </div>

        {/* Action Buttons */}
        <div class="space-y-3">
          <a
            href="/signup"
            class="block w-full px-6 py-3 bg-burgundy-old hover:bg-burgundy-dark text-white rounded-lg transition-colors text-center font-medium"
          >
            Return to Signup
          </a>
          <a
            href="/"
            class="block w-full px-6 py-3 border border-charcoal/10 hover:border-charcoal/20 text-charcoal rounded-lg transition-colors text-center font-medium"
          >
            Back to Home
          </a>
        </div>

        {/* Help text */}
        <p class="text-xs text-charcoal/50 text-center mt-6">
          Questions? Contact us at{' '}
          <a href="mailto:support@reflets-bonheur.fr" class="text-burgundy-old hover:underline">
            support@reflets-bonheur.fr
          </a>
        </p>
      </div>
    </div>
  </div>
</MainLayout>
