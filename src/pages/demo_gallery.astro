---
import DemoLayout from '../layouts/DemoLayout.astro';
import { GalleryGrid } from '../components/gallery/GalleryGrid';

const weddingDate = '15 Août 2026';
---

<DemoLayout
  title="Demo Galerie - Reflets de Bonheur"
  description="Découvrez notre galerie photo de mariage en mode démo"
  currentPage="galerie"
  bannerColor="from-rose-500 to-rose-600"
  bannerText="Mode Démo - Testez librement les fonctionnalités ! Les photos uploadées sont stockées localement dans votre navigateur."
  sectionTitle="Galerie"
  sectionSubtitle={`Galerie de mariage · ${weddingDate}`}
  showContributeButton={true}
>
  <GalleryGrid demoMode={true} client:load variant="public" />
</DemoLayout>
