---
import MainLayout from '../layouts/MainLayout.astro';
import Header from '../components/layout/Header.astro';
import Footer from '../components/layout/Footer.astro';
import FloralDecoration from '../components/decorative/FloralDecoration.astro';
import { GalleryGrid } from '../components/gallery/GalleryGrid';

const coupleName = 'Julie & Thomas';
const weddingDate = '15 Août 2026';
---

<MainLayout
  title="Demo Galerie - Reflets de Bonheur"
  description="Découvrez notre galerie photo de mariage en mode démo"
>
  <Header slot="header" />

  <!-- Demo Banner -->
  <div class="bg-linear-to-r from-violet-600 to-purple-600 text-white py-3 px-4 text-center">
    <p class="text-sm font-medium">
      Mode Démo - Testez librement les fonctionnalités ! Les photos uploadées sont stockées localement dans votre navigateur.
    </p>
  </div>

  <!-- Elegant Hero Section -->
  <section class="relative py-16 sm:py-20 overflow-hidden bg-linear-to-b from-cream to-cream-dark">
    <!-- Floral Decorations -->
    <div class="absolute top-0 left-0 w-48 h-48 sm:w-64 sm:h-64 -translate-x-1/4 -translate-y-1/4">
      <FloralDecoration variant="corner-left" class="w-full h-full" />
    </div>
    <div class="absolute top-0 right-0 w-48 h-48 sm:w-64 sm:h-64 translate-x-1/4 -translate-y-1/4">
      <FloralDecoration variant="corner-right" class="w-full h-full" />
    </div>

    <!-- Subtle pattern overlay -->
    <div class="absolute inset-0 opacity-[0.02]" style="background-image: url('data:image/svg+xml,%3Csvg width=\"60\" height=\"60\" viewBox=\"0 0 60 60\" xmlns=\"http://www.w3.org/2000/svg\"%3E%3Cg fill=\"none\" fill-rule=\"evenodd\"%3E%3Cg fill=\"%23ae1725\" fill-opacity=\"1\"%3E%3Cpath d=\"M36 34v-4h-2v4h-4v2h4v4h2v-4h4v-2h-4zm0-30V0h-2v4h-4v2h4v4h2V6h4V4h-4zM6 34v-4H4v4H0v2h4v4h2v-4h4v-2H6zM6 4V0H4v4H0v2h4v4h2V6h4V4H6z\"/%3E%3C/g%3E%3C/g%3E%3C/svg%3E');"></div>

    <div class="container mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
      <div class="text-center max-w-3xl mx-auto">
        <!-- Decorative top element -->
        <div class="mb-6">
          <span class="text-burgundy-old/70 tracking-[0.3em] uppercase text-xs font-sans font-medium">
            Galerie Souvenirs
          </span>
        </div>

        <!-- Couple Names - Elegant Script -->
        <h1 class="font-script text-4xl sm:text-5xl lg:text-6xl text-charcoal mb-4" style="font-weight: 400;">
          {coupleName}
        </h1>

        <!-- Decorative Divider -->
        <div class="flex items-center justify-center gap-4 mb-4">
          <div class="w-12 h-px bg-burgundy-old/30"></div>
          <FloralDecoration variant="small" class="w-8 h-8" />
          <div class="w-12 h-px bg-burgundy-old/30"></div>
        </div>

        <!-- Wedding Date -->
        <p class="font-serif text-lg sm:text-xl text-charcoal-light font-light italic mb-6">
          {weddingDate}
        </p>

        <!-- Subtitle -->
        <p class="text-charcoal-light/80 font-light max-w-xl mx-auto leading-relaxed">
          Revivez les plus beaux moments de cette journée magique à travers les souvenirs partagés par vos proches.
        </p>
      </div>
    </div>

    <!-- Bottom decorative border -->
    <div class="absolute bottom-0 left-0 right-0">
      <svg viewBox="0 0 1200 20" preserveAspectRatio="none" class="w-full h-4 text-pearl-white fill-current">
        <path d="M0,20 L0,10 Q300,0 600,10 T1200,10 L1200,20 Z" />
      </svg>
    </div>
  </section>

  <!-- Gallery Content -->
  <div class="bg-pearl-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12 sm:py-16 page-enter">
      <GalleryGrid demoMode={true} client:load />
    </div>
  </div>

  <!-- Bottom Decorative Section -->
  <section class="py-12 bg-linear-to-t from-cream to-pearl-white relative overflow-hidden">
    <!-- Floral decorations -->
    <div class="absolute bottom-0 left-0 w-32 h-32 sm:w-48 sm:h-48 -translate-x-1/4 translate-y-1/4 rotate-180">
      <FloralDecoration variant="corner-left" class="w-full h-full" />
    </div>
    <div class="absolute bottom-0 right-0 w-32 h-32 sm:w-48 sm:h-48 translate-x-1/4 translate-y-1/4 rotate-180">
      <FloralDecoration variant="corner-right" class="w-full h-full" />
    </div>

    <div class="container mx-auto px-4 text-center relative z-10">
      <FloralDecoration variant="divider" class="w-64 sm:w-80 mx-auto mb-6" />
      <p class="font-serif text-lg text-charcoal-light italic">
        "L'amour est la plus belle des aventures"
      </p>

      <!-- Demo Actions -->
      <div class="mt-8 flex flex-wrap justify-center gap-4">
        <a
          href="/demo_livre-or"
          class="px-6 py-3 bg-burgundy-old text-white font-medium hover:bg-[#c92a38] transition-colors"
        >
          Voir le Livre d'Or
        </a>
        <a
          href="/pricing"
          class="px-6 py-3 border border-burgundy-old text-burgundy-old font-medium hover:bg-burgundy-old hover:text-white transition-colors"
        >
          Commander mon espace
        </a>
      </div>
    </div>
  </section>

  <Footer slot="footer" />
</MainLayout>
