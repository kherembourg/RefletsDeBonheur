---
import MainLayout from '../../layouts/MainLayout.astro';
import Header from '../../components/layout/Header.astro';
import Footer from '../../components/layout/Footer.astro';
import { Check, X, HelpCircle, Camera, BookHeart, Globe, ArrowRight } from 'lucide-react';

const lang = 'fr';
---

<MainLayout
  title="Tarification - Reflets de Bonheur"
  description="Expérience premium : 99€ pour 2 ans avec votre domaine privé inclus."
  showHeader={true}
>
  <Header slot="header" />

  <!-- Hero Section -->
  <section class="py-24 bg-cream dark:bg-[#0f0f0f]">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center max-w-3xl mx-auto mb-16">
        <span class="tracking-[0.3em] uppercase text-xs font-sans font-medium text-burgundy-old">
          Tarification
        </span>
        <h1 class="font-serif text-4xl sm:text-5xl font-light text-charcoal dark:text-cream mt-4 mb-6">
          Une offre premium, sans surprises
        </h1>
        <div class="w-16 h-px mx-auto mb-6" style="background-color: #ae1725;"></div>
        <p class="text-charcoal-light dark:text-cream/70 font-light">
          Un écrin complet, privé et élégant pour votre mariage.
        </p>
      </div>

      <!-- Pricing Card -->
      <div class="max-w-3xl mx-auto">
        <div class="bg-white dark:bg-[#141414] border p-8 sm:p-12 relative" style="border-color: rgba(174, 23, 37, 0.2);">
          <!-- Badge -->
          <div class="absolute -top-4 left-1/2 -translate-x-1/2">
            <span class="text-white text-xs font-sans font-medium tracking-wider uppercase px-4 py-2" style="background-color: #ae1725;">
              Collection limitée
            </span>
          </div>

          <div class="text-center mb-10 pt-4">
            <h2 class="font-serif text-2xl text-charcoal dark:text-cream mb-2">Forfait Complet</h2>
            <p class="text-charcoal-light dark:text-cream/70 font-light text-sm">Tous les services premium inclus</p>
          </div>

          <!-- Price -->
          <div class="text-center mb-10">
            <div class="flex items-center justify-center gap-4 mb-3">
              <span class="text-2xl text-charcoal-light/50 line-through font-light">149€</span>
              <span class="font-serif text-6xl sm:text-7xl font-light text-burgundy-old">99€</span>
            </div>
            <p class="text-charcoal-light dark:text-cream/70 mb-2">
              pour <strong class="text-charcoal dark:text-cream">2 ans</strong>
              <span class="ml-2 font-medium text-burgundy-old">(Économisez 50€)</span>
            </p>
            <div class="inline-flex items-center gap-2 px-4 py-2 mt-2" style="background-color: rgba(174, 23, 37, 0.05);">
              <span class="text-sm text-charcoal-light dark:text-cream/70">
                Puis <strong class="text-burgundy-old">19,99€/an</strong> pour conserver l'accès
              </span>
            </div>
          </div>

          <!-- Divider -->
          <div class="flex items-center gap-4 my-8">
            <div class="flex-1 h-px" style="background-color: rgba(174, 23, 37, 0.1);"></div>
            <span class="text-sm" style="color: rgba(174, 23, 37, 0.4);">✦</span>
            <div class="flex-1 h-px" style="background-color: rgba(174, 23, 37, 0.1);"></div>
          </div>

          <!-- Three Services -->
          <div class="grid md:grid-cols-3 gap-6 mb-10">
            <div class="text-center p-4">
              <Camera class="w-6 h-6 mx-auto mb-3 text-burgundy-old" />
              <h4 class="font-medium text-charcoal dark:text-cream text-sm mb-2">Galerie Photos</h4>
              <ul class="text-xs text-charcoal-light dark:text-cream/70 space-y-1 font-light">
                <li>Uploads illimités</li>
                <li>Albums par moment</li>
                <li>Archive ZIP</li>
              </ul>
            </div>

            <div class="text-center p-4 border-x" style="border-color: rgba(174, 23, 37, 0.1);">
              <BookHeart class="w-6 h-6 mx-auto mb-3 text-burgundy-old" />
              <h4 class="font-medium text-charcoal dark:text-cream text-sm mb-2">Livre d'Or</h4>
              <ul class="text-xs text-charcoal-light dark:text-cream/70 space-y-1 font-light">
                <li>Messages illimités</li>
                <li>Modération élégante</li>
                <li>PDF imprimable</li>
              </ul>
            </div>

            <div class="text-center p-4">
              <Globe class="w-6 h-6 mx-auto mb-3 text-burgundy-old" />
              <h4 class="font-medium text-charcoal dark:text-cream text-sm mb-2">Site de Mariage</h4>
              <ul class="text-xs text-charcoal-light dark:text-cream/70 space-y-1 font-light">
                <li>Domaine privé</li>
                <li>Programme & lieu</li>
                <li>Suivi RSVP</li>
              </ul>
            </div>
          </div>

          <!-- CTA -->
          <div class="text-center">
            <a
              href="/connexion"
              class="inline-flex items-center px-10 py-4 text-white font-sans font-medium text-sm tracking-wider uppercase transition-all hover:opacity-90"
              style="background-color: #ae1725;"
            >
              Commencer maintenant
              <ArrowRight class="ml-2 w-4 h-4" />
            </a>
            <p class="mt-4 text-charcoal-light dark:text-cream/70 text-sm font-light">
              Garantie satisfait ou remboursé 30 jours
            </p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Features List -->
  <section class="py-24 dark:bg-[#141414]" style="background-color: rgba(174, 23, 37, 0.03);">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <span class="tracking-[0.3em] uppercase text-xs font-sans font-medium text-burgundy-old">
          Inclus dans l'offre
        </span>
        <h2 class="font-serif text-3xl sm:text-4xl font-light text-charcoal dark:text-cream mt-4">
          Tout ce dont vous avez besoin
        </h2>
      </div>

      <div class="max-w-4xl mx-auto grid sm:grid-cols-2 gap-4">
        {[
          "Galerie photos & vidéos illimitée",
          "Nom de domaine privé",
          "Livre d'or numérique",
          "Site web & RSVP",
          "Application mobile (PWA)",
          "Mode hors ligne",
          "Téléchargement groupé (ZIP)",
          "PDF imprimable du livre d'or",
          "Albums par catégories",
          "Réactions & favoris",
          "Mode diaporama",
          "Support par email"
        ].map(feature => (
          <div class="flex items-center gap-3 p-3 bg-white dark:bg-[#1b1b1b] border border-white/10">
            <div class="w-5 h-5 flex items-center justify-center shrink-0" style="border: 1px solid #ae1725; color: #ae1725;">
              <Check class="w-3 h-3" />
            </div>
            <span class="text-charcoal dark:text-cream font-light text-sm">{feature}</span>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- FAQ Section -->
  <section class="py-24 bg-cream dark:bg-[#0f0f0f]">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <span class="tracking-[0.3em] uppercase text-xs font-sans font-medium text-burgundy-old">
          Questions fréquentes
        </span>
        <h2 class="font-serif text-3xl sm:text-4xl font-light text-charcoal dark:text-cream mt-4">
          Nous répondons à vos questions
        </h2>
      </div>

      <div class="max-w-3xl mx-auto space-y-4">
        <!-- FAQ Item 1 -->
        <div class="bg-white dark:bg-[#141414] border p-6" style="border-color: rgba(174, 23, 37, 0.1);">
          <div class="flex items-start gap-3">
            <HelpCircle class="w-5 h-5 shrink-0 mt-0.5 text-burgundy-old" />
            <div>
              <h3 class="font-medium text-charcoal dark:text-cream mb-2">
                Comment fonctionne le domaine personnalisé ?
              </h3>
              <p class="text-charcoal-light dark:text-cream/70 font-light text-sm leading-relaxed">
                Vous choisissez votre nom lors de l'inscription (ex: marie-thomas.reflets-bonheur.fr).
                Ce sera l'adresse unique de votre espace mariage, accessible par tous vos invités.
              </p>
            </div>
          </div>
        </div>

        <!-- FAQ Item 2 -->
        <div class="bg-white dark:bg-[#141414] border p-6" style="border-color: rgba(174, 23, 37, 0.1);">
          <div class="flex items-start gap-3">
            <HelpCircle class="w-5 h-5 shrink-0 mt-0.5 text-burgundy-old" />
            <div>
              <h3 class="font-medium text-charcoal dark:text-cream mb-2">
                Comment fonctionne le renouvellement ?
              </h3>
              <p class="text-charcoal-light dark:text-cream/70 font-light text-sm leading-relaxed">
                Après 2 ans, si vous souhaitez garder votre galerie en ligne (mode lecture seule, sans nouveaux uploads),
                c'est seulement 19,99€/an. Le renouvellement est optionnel - vous pouvez télécharger vos données à tout moment.
              </p>
            </div>
          </div>
        </div>

        <!-- FAQ Item 3 -->
        <div class="bg-white dark:bg-[#141414] border p-6" style="border-color: rgba(174, 23, 37, 0.1);">
          <div class="flex items-start gap-3">
            <HelpCircle class="w-5 h-5 shrink-0 mt-0.5 text-burgundy-old" />
            <div>
              <h3 class="font-medium text-charcoal dark:text-cream mb-2">
                Mes photos sont-elles sécurisées ?
              </h3>
              <p class="text-charcoal-light dark:text-cream/70 font-light text-sm leading-relaxed">
                Oui, vos données sont chiffrées et sauvegardées automatiquement.
                Seules les personnes ayant le lien privé peuvent voir votre galerie.
              </p>
            </div>
          </div>
        </div>

        <!-- FAQ Item 4 -->
        <div class="bg-white dark:bg-[#141414] border p-6" style="border-color: rgba(174, 23, 37, 0.1);">
          <div class="flex items-start gap-3">
            <HelpCircle class="w-5 h-5 shrink-0 mt-0.5 text-burgundy-old" />
            <div>
              <h3 class="font-medium text-charcoal dark:text-cream mb-2">
                Combien de temps mon site reste-t-il en ligne ?
              </h3>
              <p class="text-charcoal-light dark:text-cream/70 font-light text-sm leading-relaxed">
                Votre site est accessible pendant 2 ans minimum. Ensuite, vous pouvez le renouveler ou récupérer
                toutes vos données. Nous conservons vos fichiers 90 jours après expiration.
              </p>
            </div>
          </div>
        </div>

        <!-- FAQ Item 5 -->
        <div class="bg-white dark:bg-[#141414] border p-6" style="border-color: rgba(174, 23, 37, 0.1);">
          <div class="flex items-start gap-3">
            <HelpCircle class="w-5 h-5 shrink-0 mt-0.5 text-burgundy-old" />
            <div>
              <h3 class="font-medium text-charcoal dark:text-cream mb-2">
                Puis-je récupérer mes photos ?
              </h3>
              <p class="text-charcoal-light dark:text-cream/70 font-light text-sm leading-relaxed">
                À tout moment, vous pouvez télécharger l'intégralité de vos photos et vidéos en un clic (format ZIP).
                Le livre d'or peut être exporté en PDF.
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Comparison Section -->
  <section class="py-24 dark:bg-[#141414]" style="background-color: rgba(174, 23, 37, 0.03);">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <span class="tracking-[0.3em] uppercase text-xs font-sans font-medium text-burgundy-old">
          Comparaison
        </span>
        <h2 class="font-serif text-3xl sm:text-4xl font-light text-charcoal dark:text-cream mt-4">
          Pourquoi nous choisir ?
        </h2>
      </div>

      <div class="max-w-5xl mx-auto overflow-x-auto">
        <table class="w-full bg-white dark:bg-[#1b1b1b]">
          <thead>
            <tr style="background-color: #ae1725;">
              <th class="px-4 py-4 text-left text-sm font-medium tracking-wide text-white">Fonctionnalité</th>
              <th class="px-4 py-4 text-center text-sm font-medium tracking-wide text-white">Reflets de Bonheur</th>
              <th class="px-4 py-4 text-center text-sm font-medium tracking-wide text-white">Google Photos</th>
              <th class="px-4 py-4 text-center text-sm font-medium tracking-wide text-white">WeTransfer</th>
            </tr>
          </thead>
          <tbody class="divide-y" style="--tw-divide-opacity: 0.1; border-color: rgba(174, 23, 37, 0.1);">
            <tr>
              <td class="px-4 py-4 text-sm text-charcoal dark:text-cream">Prix</td>
              <td class="px-4 py-4 text-center font-medium text-sm text-burgundy-old">99€/2 ans</td>
              <td class="px-4 py-4 text-center text-charcoal-light dark:text-cream/70 text-sm">Gratuit (limité)</td>
              <td class="px-4 py-4 text-center text-charcoal-light dark:text-cream/70 text-sm">12€/mois</td>
            </tr>
            <tr>
              <td class="px-4 py-4 text-sm text-charcoal dark:text-cream">Domaine personnalisé</td>
              <td class="px-4 py-4 text-center"><Check class="w-5 h-5 mx-auto text-burgundy-old" /></td>
              <td class="px-4 py-4 text-center"><X class="w-5 h-5 text-charcoal-light/40 mx-auto" /></td>
              <td class="px-4 py-4 text-center"><X class="w-5 h-5 text-charcoal-light/40 mx-auto" /></td>
            </tr>
            <tr>
              <td class="px-4 py-4 text-sm text-charcoal dark:text-cream">Livre d'or</td>
              <td class="px-4 py-4 text-center"><Check class="w-5 h-5 mx-auto text-burgundy-old" /></td>
              <td class="px-4 py-4 text-center"><X class="w-5 h-5 text-charcoal-light/40 mx-auto" /></td>
              <td class="px-4 py-4 text-center"><X class="w-5 h-5 text-charcoal-light/40 mx-auto" /></td>
            </tr>
            <tr>
              <td class="px-4 py-4 text-sm text-charcoal dark:text-cream">Site web mariage</td>
              <td class="px-4 py-4 text-center"><Check class="w-5 h-5 mx-auto text-burgundy-old" /></td>
              <td class="px-4 py-4 text-center"><X class="w-5 h-5 text-charcoal-light/40 mx-auto" /></td>
              <td class="px-4 py-4 text-center"><X class="w-5 h-5 text-charcoal-light/40 mx-auto" /></td>
            </tr>
            <tr>
              <td class="px-4 py-4 text-sm text-charcoal dark:text-cream">Qualité originale</td>
              <td class="px-4 py-4 text-center"><Check class="w-5 h-5 mx-auto text-burgundy-old" /></td>
              <td class="px-4 py-4 text-center text-charcoal-light dark:text-cream/70 text-sm">Compressé</td>
              <td class="px-4 py-4 text-center"><Check class="w-5 h-5 mx-auto text-burgundy-old" /></td>
            </tr>
            <tr>
              <td class="px-4 py-4 text-sm text-charcoal dark:text-cream">Sans publicité</td>
              <td class="px-4 py-4 text-center"><Check class="w-5 h-5 mx-auto text-burgundy-old" /></td>
              <td class="px-4 py-4 text-center"><X class="w-5 h-5 text-charcoal-light/40 mx-auto" /></td>
              <td class="px-4 py-4 text-center text-charcoal-light dark:text-cream/70 text-sm">Version Pro</td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </section>

  <!-- Final CTA -->
  <section class="py-24" style="background-color: #ae1725;">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center max-w-2xl mx-auto">
        <h2 class="font-serif text-3xl sm:text-4xl font-light mb-6 text-white">
          Prêt à sublimer vos souvenirs ?
        </h2>
        <p class="text-white/80 font-light mb-4">
          <span class="line-through text-white/50">149€</span>
          <strong class="text-white ml-2">99€</strong> pour 2 ans complets.
        </p>
        <p class="text-white/70 font-light text-sm mb-8">
          Domaine privé inclus • Puis 19,99€/an pour le renouvellement
        </p>
        <a
          href="/connexion"
          class="inline-flex items-center px-10 py-4 bg-white font-sans font-medium text-sm tracking-wider uppercase hover:bg-gray-100 transition-all text-burgundy-old"
        >
          Commencer maintenant
          <ArrowRight class="ml-2 w-4 h-4" />
        </a>
        <p class="mt-6 text-white/60 text-sm font-light">
          Garantie satisfait ou remboursé 30 jours
        </p>
      </div>
    </div>
  </section>

  <Footer slot="footer" />
</MainLayout>
