---
import { WebsiteEditor } from '../../components/admin/WebsiteEditor';
import '../../styles/global.css';

import { isSupabaseConfigured } from '../../lib/supabase/client';

// For demo purposes, we'll use a mock wedding from weddingData.ts
// In production, these would come from authentication/session
const weddingId = 'w-001';
const weddingSlug = 'julie-thomas'; // Uses the mock wedding microsite at /julie-thomas

// Check if we're in demo mode (Supabase not configured)
const demoMode = !isSupabaseConfigured();

// Fetch initial customization from API (commented out for demo)
// const response = await fetch(`${Astro.url.origin}/api/customization/get?weddingId=${weddingId}`);
// const { customization } = await response.json();
---

<!DOCTYPE html>
<html lang="fr">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Ã‰diteur de site web - Reflets de Bonheur</title>
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
  </head>
  <body class="m-0 p-0 overflow-hidden bg-[#0f0f0f]">
    <WebsiteEditor
      client:only="react"
      weddingId={weddingId}
      weddingSlug={weddingSlug}
      demoMode={demoMode}
      onSave={async (customization) => {
        'use client';
        const response = await fetch('/api/customization/save', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ weddingId, customization }),
        });

        if (!response.ok) {
          throw new Error('Failed to save customization');
        }

        return response.json();
      }}
    />
  </body>
</html>
